# ==================== APPLICATION ====================
APP_NAME="BrickNova Auth Service"
VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# ==================== SECURITY - CRITIQUE ====================
# üîê G√©n√©rer avec : openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== DATABASE ====================
# PostgreSQL - Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://bricknova_auth:secure_password@localhost:5432/bricknova_auth_db

# Connection Pool (Performance)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# ==================== REDIS (Cache & Sessions) ====================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
CACHE_DEFAULT_TTL=300  # 5 minutes

# ==================== CORS ====================
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001","https://bricknova.com"]
ALLOW_CREDENTIALS=true

# ==================== OAUTH2 (Optionnel) ====================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# ==================== EMAIL ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@bricknova.com
SMTP_FROM_NAME="BrickNova"

# ==================== EXTERNAL SERVICES ====================
USER_SERVICE_URL=http://user-service:8002

# ==================== MONITORING ====================
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
LOGIN_RATE_LIMIT_PER_MINUTE=5
API_RATE_LIMIT_PER_MINUTE=60

# ==================== FEATURE FLAGS ====================
ENABLE_REGISTRATION=true
ENABLE_OAUTH=false
ENABLE_EMAIL_VERIFICATION=true
```

